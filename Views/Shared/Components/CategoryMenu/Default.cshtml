@model IEnumerable<Category>

<div class="list-group">
    <h3>Categories</h3>
    <a href="/" class="list-group-item list-group-item-action">
            All Movies
    </a>
    @foreach (var i in Model)
    {
        <a asp-controller="Movie" asp-action="Index" asp-route-id="@i.Id"  asp-route-category="@i.Name"
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == i.Id.ToString()?"active":"")">
            @i.Name
        </a>
    }
</div>